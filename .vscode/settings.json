// .vscode/settings.json
{
  "editor.codeActionsOnSave": {
    "source.fixAll": "always",
    "source.fixAll.eslint": "always"
  },
  "tailwindCSS.includeLanguages": {
    "html": "html",
    "javascript": "javascript, vue",
    "vue": "html"
  },
  "editor.quickSuggestions": {
    "strings": true
  }
}